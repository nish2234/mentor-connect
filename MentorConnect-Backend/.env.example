# Environment Variables Template for MentorConnect Backend
# Copy this file to .env and fill in your actual values

# Database Configuration (Aiven MySQL)
DATABASE_URL=jdbc:mysql://your-aiven-host:port/defaultdb?useSSL=true&requireSSL=true&verifyServerCertificate=false&allowPublicKeyRetrieval=true
DATABASE_USERNAME=avnadmin
DATABASE_PASSWORD=your-aiven-database-password

# Email Configuration (Resend API - Free 3,000 emails/month)
# Sign up at https://resend.com to get your API key
RESEND_API_KEY=re_your_resend_api_key_here
RESEND_FROM_EMAIL=noreply@mentorconnect.com

# Server Configuration
SERVER_PORT=8080

# JWT Configuration
# Generate a secure secret: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
JWT_SECRET=change-this-to-a-secure-random-string-min-256-bits
JWT_EXPIRATION=86400000

# CORS Configuration
# Add your frontend URLs (comma-separated)
CORS_ORIGINS=http://localhost:3000,https://your-frontend-url.vercel.app

# Logging Configuration
LOG_LEVEL_APP=INFO
LOG_LEVEL_SECURITY=INFO
